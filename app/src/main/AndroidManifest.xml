<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dam.t08p01">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_chirinos"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_chirinos"
        android:supportsRtl="true"
        android:theme="@style/Theme.T08p01">
        <activity
            android:name=".vista.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vista.DptosActivity"
            android:exported="false"
            android:label="@string/title_activity_dptos"
            android:parentActivityName=".vista.MainActivity"
            android:theme="@style/Theme.T08p01.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".vista.AulasActivity"
            android:exported="false"
            android:label="@string/title_activity_aulas"
            android:parentActivityName=".vista.MainActivity"
            android:theme="@style/Theme.T08p01.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
    </application>

</manifest>